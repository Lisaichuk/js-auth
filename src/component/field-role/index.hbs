<div class="field field--role">
	<span class="field__label">{{label}}</span>

	<div class="field__container">
		<button onclick="fieldRole.toggle(this)" type="button" class="field__select">
			<span class="field__value field__value--placeholder">{{placeholder}}</span>
			<span class="field__icon"></span>
		</button>

		<ul active class="field__option-list">
			{{#each list}}
			<li onclick="
			fieldRole.change(this);
			{{../action}}('{{../name}}', {{value}})
			
			" class="field__option">
				{{text}}
			</li>
			{{/each}}
		</ul>
	</div>
</div>